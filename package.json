{
  "name": "@futarchy402/mcp",
  "version": "1.0.2",
  "description": "MCP server and adapters for Futarchy402 governance platform with x402 payment-gated voting",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "futarchy",
    "governance",
    "solana",
    "x402",
    "ai-tools",
    "openai",
    "claude",
    "langchain"
  ],
  "author": "permasean",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/permasean/futarchy402-mcp.git"
  },
  "homepage": "https://github.com/permasean/futarchy402-mcp#readme",
  "bugs": {
    "url": "https://github.com/permasean/futarchy402-mcp/issues"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./adapters/openai": {
      "import": "./dist/adapters/openai/adapter.js",
      "types": "./dist/adapters/openai/adapter.d.ts"
    },
    "./adapters/anthropic": {
      "import": "./dist/adapters/anthropic/adapter.js",
      "types": "./dist/adapters/anthropic/adapter.d.ts"
    },
    "./adapters/mcp": {
      "import": "./dist/adapters/mcp/server.js",
      "types": "./dist/adapters/mcp/server.d.ts"
    },
    "./adapters/langchain": {
      "import": "./dist/adapters/langchain/adapter.js",
      "types": "./dist/adapters/langchain/adapter.d.ts"
    }
  },
  "dependencies": {
    "@solana/web3.js": "^1.95.8",
    "bs58": "^6.0.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@langchain/core": "^0.3.29",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "openai": "^4.77.3",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@langchain/core": "^0.3.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "openai": "^4.0.0",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@langchain/core": {
      "optional": true
    },
    "@modelcontextprotocol/sdk": {
      "optional": true
    },
    "openai": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
